<% if type == :new %>
  <% action_url = cats_url %>
  <% button_text = 'Create Cat' %>
<% elsif type == :edit %>
  <% action_url = cat_url(cat) %>
  <% button_text = 'Update Cat' %>
<% end %>


<form action="<%= action_url %>" method="post">
  <% if type == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <label for="name">Name:
    <input type="text" id="name" name="cat[name]" value="<%= @cat.name %>">
  </label>
  <label for="birth_date">birth_date:
    <input type="date" id="birth_date" name="cat[birth_date]" value="<%= @cat.birth_date %>">
  </label>
  <label for="color">color:</label>
  <select name='cat[color]' id="color">
    <option value="black" <%= @cat.color == "black" ? "selected" : "" %> >black</option>
    <option value="white" <%= @cat.color == "white" ? "selected" : "" %>>white</option>
    <option value="orange" <%= @cat.color == "orange" ? "selected" : "" %>>orange</option>
    <option value="green" <%= @cat.color == "green" ? "selected" : "" %>>green</option>
    <option value="calico" <%= @cat.color == "calico" ? "selected" : "" %>>calico</option>
  </select>
  <br>
  <label for="sex">Sex</label>
  <input type="radio" name="cat[sex]" value="M" id="male" <%= @cat.sex == "M" ? "checked" : "" %>>
  <label for="male">Male</label>
  <input type="radio" name="cat[sex]" value="F" id="female" <%= @cat.sex == "F" ? "checked" : "" %>>
  <label for="female">Female</label>
  <br>
  <label for="description">Description:</label>
  <br>
  <textarea name="cat[description]" id="description"><%=@cat.description%></textarea>
  <br>
  <input type="submit" value="<%= button_text %>%">
</form>